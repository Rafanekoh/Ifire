        // Content types
        const contentTypes = {
            handouts: {
                name: "Handouts",
                icon: "bx-book"
            },
            videos: {
                name: "Video Classes",
                icon: "bx-video"
            },
            questions: {
                name: "Questions",
                icon: "bx-question-mark"
            },
            flashcards: {
                name: "Flashcards",
                icon: "bx-card"
            }
        };

        // Navigation tabs
        const navBtns = document.querySelectorAll('.nav-btn');
        const tabContents = document.querySelectorAll('.tab-content');
        
        navBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const target = btn.getAttribute('data-target');
                
                // Update navigation buttons (mobile)
                document.querySelectorAll('.nav-btn').forEach(navBtn => {
                    navBtn.classList.remove('text-primary', 'border-t-2', 'border-primary', 'bg-primary/10');
                    navBtn.classList.add('text-gray-500', 'dark:text-gray-400');
                });
                
                // Add active class to clicked button
                if (window.innerWidth < 768) {
                    btn.classList.remove('text-gray-500', 'dark:text-gray-400');
                    btn.classList.add('text-primary', 'border-t-2', 'border-primary');
                } else {
                    btn.classList.remove('text-gray-500', 'dark:text-gray-400');
                    btn.classList.add('text-primary', 'bg-primary/10');
                }
                
                // Update content tabs
                tabContents.forEach(content => {
                    content.classList.remove('active');
                });
                document.getElementById(target).classList.add('active');
            });
        });
        
        // Study tab functionality
        document.addEventListener('DOMContentLoaded', () => {
            // DOM elements
            const studySearch = document.getElementById('study-search');
            const disciplinesView = document.getElementById('disciplines-view');
            const topicsView = document.getElementById('topics-view');
            const contentView = document.getElementById('content-view');
            const currentDisciplineTitle = document.getElementById('current-discipline-title');
            const currentTopicTitle = document.getElementById('current-topic-title');
            const topicFilters = document.getElementById('topic-filters');
            const topicsGrid = document.getElementById('topics-grid');
            const contentItemsGrid = document.getElementById('content-items-grid');
            const backToDisciplines = document.getElementById('back-to-disciplines');
            const backToTopics = document.getElementById('back-to-topics');
            const contentTypeFilters = document.querySelectorAll('.content-type-filter');
            
            // Current state
            let currentDiscipline = null;
            let currentTopic = null;
            let currentContentType = 'handouts';
            
            // Event listeners for discipline cards
            document.querySelectorAll('.discipline-card, .view-topics-btn').forEach(element => {
                element.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Get the discipline from the clicked card or button
                    const disciplineCard = element.closest('.discipline-card');
                    const disciplineId = disciplineCard.getAttribute('data-discipline');
                    
                    showTopics(disciplineId);
                });
            });
            
            // Back button to disciplines
            backToDisciplines.addEventListener('click', () => {
                disciplinesView.style.display = 'block';
                topicsView.style.display = 'none';
                currentDiscipline = null;
            });
            
            // Back button to topics
            backToTopics.addEventListener('click', () => {
                topicsView.style.display = 'block';
                contentView.style.display = 'none';
                currentTopic = null;
            });
            
            // Search functionality
            studySearch.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase().trim();
                
                if (searchTerm.length < 2) {
                    // If search term is too short, show all disciplines
                    if (currentDiscipline) {
                        // If we're in a discipline, show all topics
                        showAllTopics();
                    } else {
                        // Otherwise, show all disciplines
                        document.querySelectorAll('.discipline-card').forEach(card => {
                            card.style.display = 'block';
                        });
                    }
                    return;
                }
                
                if (currentDiscipline) {
                    // Search within topics of current discipline
                    const visibleTopics = studyMaterials[currentDiscipline].topics.filter(topic => 
                        topic.toLowerCase().includes(searchTerm)
                    );
                    
                    // Update the topics grid
                    renderTopicsGrid(visibleTopics);
                } else {
                    // Search across all disciplines and topics
                    document.querySelectorAll('.discipline-card').forEach(card => {
                        const disciplineId = card.getAttribute('data-discipline');
                        const discipline = studyMaterials[disciplineId];
                        
                        // Check if discipline name matches
                        if (discipline.name.toLowerCase().includes(searchTerm)) {
                            card.style.display = 'block';
                            return;
                        }
                        
                        // Check if any topics in this discipline match
                        const matchingTopics = discipline.topics.filter(topic => 
                            topic.toLowerCase().includes(searchTerm)
                        );
                        
                        if (matchingTopics.length > 0) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                }
            });
            
            // Content type filters
            contentTypeFilters.forEach(filter => {
                filter.addEventListener('click', () => {
                    // Update active state
                    contentTypeFilters.forEach(f => f.classList.remove('active'));
                    filter.classList.add('active');
                    
                    // Update current content type
                    currentContentType = filter.getAttribute('data-content-type');
                    
                    // Refresh content
                    if (currentTopic) {
                        showContent(currentDiscipline, currentTopic);
                    }
                });
            });
            
            // Function to show topics for a discipline
            function showTopics(disciplineId) {
                currentDiscipline = disciplineId;
                const discipline = studyMaterials[disciplineId];
                
                // Update the title
                currentDisciplineTitle.textContent = discipline.name;
                
                // Clear and populate the topic filters
                topicFilters.innerHTML = '';
                
                // Add "All" filter
                const allFilterBtn = document.createElement('button');
                allFilterBtn.className = 'topic-filter active bg-primary text-white px-4 py-2 rounded-full text-sm whitespace-nowrap';
                allFilterBtn.textContent = 'All Topics';
                allFilterBtn.addEventListener('click', function() {
                    // Update active state
                    document.querySelectorAll('.topic-filter').forEach(btn => {
                        btn.classList.remove('active', 'bg-primary', 'text-white');
                        btn.classList.add('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-200');
                    });
                    this.classList.remove('bg-gray-200', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-gray-200');
                    this.classList.add('active', 'bg-primary', 'text-white');
                    
                    // Show all topics
                    showAllTopics();
                });
                topicFilters.appendChild(allFilterBtn);
                
                // Render the topics grid
                renderTopicsGrid(discipline.topics);
                
                // Show the topics view, hide others
                disciplinesView.style.display = 'none';
                topicsView.style.display = 'block';
                contentView.style.display = 'none';
            }
            
            // Function to render topics grid
            function renderTopicsGrid(topics) {
                // Clear existing topics
                topicsGrid.innerHTML = '';
                
                // Render each topic
                topics.forEach(topic => {
                    const discipline = studyMaterials[currentDiscipline];
                    const topicCard = document.createElement('div');
                    topicCard.className = 'topic-card card bg-white dark:bg-dark-secondary rounded-xl overflow-hidden shadow-md cursor-pointer';
                    topicCard.innerHTML = `
                        <div class="p-4">
                            <div class="flex items-center mb-3">
                                <div class="bg-${discipline.color}/10 p-2 rounded-full mr-3">
                                    <i class="bx ${discipline.icon} text-${discipline.color} text-xl"></i>
                                </div>
                                <h3 class="font-semibold">${topic}</h3>
                            </div>
                            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                                Explore all materials related to ${topic.toLowerCase()} including lectures, exercises, and practice tests.
                            </p>
                            <div class="flex justify-between items-center">
                                <span class="text-xs text-gray-500 dark:text-gray-400">4 types of content</span>
                                <button class="view-content-btn bg-${discipline.color} text-white text-sm px-3 py-1 rounded-lg">View Materials</button>
                            </div>
                        </div>
                    `;
                    
                    // Add click event to show content
                    topicCard.querySelector('.view-content-btn').addEventListener('click', () => {
                        showContent(currentDiscipline, topic);
                    });
                    
                    topicsGrid.appendChild(topicCard);
                });
            }
            
            // Function to show all topics for current discipline
            function showAllTopics() {
                if (currentDiscipline) {
                    renderTopicsGrid(studyMaterials[currentDiscipline].topics);
                }
            }
            
            // Function to show content for a topic
            function showContent(disciplineId, topic) {
                currentTopic = topic;
                const discipline = studyMaterials[disciplineId];
                
                // Update the title
                currentTopicTitle.textContent = topic;
                
                // Clear and populate the content grid
                contentItemsGrid.innerHTML = '';
                
                // Generate example content items based on content type
                const contentCount = 6; // Number of content items to generate
                
                for (let i = 1; i <= contentCount; i++) {
                    const contentCard = document.createElement('div');
                    contentCard.className = 'card bg-white dark:bg-dark-secondary rounded-xl overflow-hidden shadow-md';
                    
                    const contentType = contentTypes[currentContentType];
                    const contentTitle = getContentTitle(currentContentType, topic, i);
                    
                    contentCard.innerHTML = `
                        <div class="h-40 bg-${discipline.color} flex items-center justify-center">
                            <i class="${contentType.icon} text-white text-6xl"></i>
                        </div>
                        <div class="p-4">
                            <div class="flex justify-between items-center mb-3">
                                <span class="text-xs px-2 py-1 bg-${discipline.color}/10 text-${discipline.color} rounded-full">${contentType.name}</span>
                                <span class="text-xs text-gray-500 dark:text-gray-400">Level ${Math.min(Math.ceil(i/2), 3)}</span>
                            </div>
                            <h3 class="font-semibold mb-2">${contentTitle}</h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">${getContentDescription(currentContentType, topic)}</p>
                            <div class="flex justify-between items-center">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 rounded-full bg-gray-300 flex items-center justify-center overflow-hidden">
                                        <i class="bx bx-user text-gray-600"></i>
                                    </div>
                                    <span class="text-xs ml-2">Prof. ${getRandomProfessor()}</span>
                                </div>
                                <button class="bg-${discipline.color} text-white text-sm px-3 py-1 rounded-lg">Start</button>
                            </div>
                        </div>
                    `;
                    
                    contentItemsGrid.appendChild(contentCard);
                }
                
                // Show the content view, hide others
                disciplinesView.style.display = 'none';
                topicsView.style.display = 'none';
                contentView.style.display = 'block';
            }
            
            // Helper functions for content generation
            function getContentTitle(contentType, topic, index) {
                const prefixes = {
                    handouts: ["Introduction to ", "Complete Guide to ", "Advanced ", "Understanding ", "Mastering ", "Basics of "],
                    videos: ["Video Lecture: ", "Video Series: ", "Visual Guide to ", "Watch & Learn: ", "Masterclass: ", "Tutorial: "],
                    questions: ["Practice Questions: ", "Quiz on ", "Test Your Knowledge: ", "Exam Prep: ", "Challenge: ", "Problem Set: "],
                    flashcards: ["Flashcards: ", "Key Terms: ", "Quick Review: ", "Memory Cards: ", "Concepts: ", "Revision Cards: "]
                };
                
                const prefix = prefixes[contentType][index % prefixes[contentType].length];
                return `${prefix}${topic}`;
            }
            
            function getContentDescription(contentType, topic) {
                const descriptions = {
                    handouts: `Comprehensive study material covering all aspects of ${topic.toLowerCase()} with examples and practice problems.`,
                    videos: `Watch engaging video lectures that break down complex concepts in ${topic.toLowerCase()} with visual examples.`,
                    questions: `Test your understanding of ${topic.toLowerCase()} with these practice questions designed to challenge your knowledge.`,
                    flashcards: `Review key concepts and memorize important terms related to ${topic.toLowerCase()} with these flashcards.`
                };
                
                return descriptions[contentType];
            }
            
            function getRandomProfessor() {
                const lastNames = ["Silva", "Santos", "Oliveira", "Souza", "Pereira", "Lima", "Costa", "Rodrigues", "Almeida", "Ferreira"];
                return lastNames[Math.floor(Math.random() * lastNames.length)];
            }
        });
        
        // Settings tab navigation
        const settingsTabBtns = document.querySelectorAll('.settings-tab-btn');
        const settingsTabContents = document.querySelectorAll('.settings-tab-content');
        
        settingsTabBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                settingsTabBtns.forEach(b => {
                    b.classList.remove('active', 'text-primary', 'border-b-2', 'border-primary');
                    b.classList.add('text-gray-500', 'dark:text-gray-400');
                });
                btn.classList.remove('text-gray-500', 'dark:text-gray-400');
                btn.classList.add('active', 'text-primary', 'border-b-2', 'border-primary');
                
                settingsTabContents.forEach(content => {
                    content.classList.add('hidden');
                });
                
                // Show corresponding content
                const index = Array.from(settingsTabBtns).indexOf(btn);
                settingsTabContents[index]?.classList.remove('hidden');
            });
        });
        
        // Play game modal
        const playButton = document.getElementById('play-button');
        const playModal = document.getElementById('play-modal');
        const closeModal = document.getElementById('close-modal');
        const gameSubjectBtns = document.querySelectorAll('.game-subject-btn');
        const gameDifficultyBtns = document.querySelectorAll('.game-difficulty-btn');
        const startGameBtn = document.getElementById('start-game-btn');
        
        playButton.addEventListener('click', () => {
            playModal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        });
        
        closeModal.addEventListener('click', () => {
            playModal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        });
        
        gameSubjectBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                gameSubjectBtns.forEach(b => {
                    b.classList.remove('bg-primary', 'text-white');
                });
                btn.classList.add('bg-primary', 'text-white');
            });
        });
        
        gameDifficultyBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                gameDifficultyBtns.forEach(b => {
                    b.classList.remove('bg-primary', 'text-white');
                });
                btn.classList.add('bg-primary', 'text-white');
            });
        });
        
        startGameBtn.addEventListener('click', () => {
            // Play game logic would go here
            playModal.classList.add('hidden');
            document.body.style.overflow = 'auto';
            
            // Show a temporary alert (would be replaced with actual game)
            alert('Game started! This would launch the actual game.');
        });
        
        // Initialize the app with the first tab active
        document.querySelector('.nav-btn[data-target="start-tab"]').classList.add('text-primary');
        if (window.innerWidth < 768) {
            document.querySelector('.nav-btn[data-target="start-tab"]').classList.add('border-t-2', 'border-primary');
        } else {
            document.querySelector('.nav-btn[data-target="start-tab"]').classList.add('bg-primary/10');
        }
    </script>
</body>
</html>
